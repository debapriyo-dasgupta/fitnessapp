pipeline {
    agent any

    environment {
        git_dev_branch_name = 'master'
    }

    stages {
        stage('Build') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'dockerhub-credentials', usernameVariable: 'username', passwordVariable: 'password')]) {
                        // You can now use DOCKERHUB_USERNAME and DOCKERHUB_PASSWORD within this block
                        echo "DockerHub Username: ${username}"

                        // Example command using the username and password
                        sh "docker login -u ${username} -p ${password}"
                    }
                }
            }
        }
    }
}
